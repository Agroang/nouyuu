<div class="container">
  <h1>Let's build your garden.</h1>
  <div>
  <%= image_tag "measure.png", style: "width: 100%;"%>
  </div>
  <small>NOTE: Currently, only square or rectangular gardens are supported by this app.</small>
  <%= simple_form_for @garden do |f| %>
    <%= f.input :location, label: "Where is your garden?" %>
    <%= f.input :height, input_html: { type: "number", step: 0.5, min: 1, max: 10 },label: "Measure the length of your garden bed the closest 0.5 meters:" %>
    <%= f.input :width, input_html: { type: "number", step: 0.5, min: 1, max: 10 }, label: "Measure the width of your garden bed the closest 0.5 meters:"  %>
    <%= f.submit "Build" %>
  <% end %>
</div>
