<div class="crops">
  <% @crops.each do |crop| %>
    <%= render "crop", crop: crop %>
  <% end %>
</div>
<% if @favorites.any? %>
  <div class="crops">
    <div id="favorites" style="border: 1px solid red">
      <% @favorites.each do |favorite| %>
        <%= render "crop", crop: favorite %>
      <% end %>
    </div>
  </div>
<% end %>
