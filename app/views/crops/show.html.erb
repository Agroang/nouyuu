<div class="crop-show-card-body">
  <div class="crop-show-card">
    <h1><%= @crop.name %></h1>
    <div class="crop-img-container">
      <%= image_tag @crop.image_url %>
    </div>
    <div class="crop-plant-family-container">
      <h5>Plant Family: </h5>
      <p><em><%= @crop.plant_family %></em></p>
    </div>
    <div class="crop-description-container">
      <h5>Description: </h5>
      <p><%= @crop.description %></p>
    </div>
    <%#= put recommended stuff together in another color %>
    <%#= add the recommended sowing months as well %>
    <div class="crop-white-container">
      <h5>Needs</h5>
      <div class="crop-bottom-details-container">
        <p>Water:</p>
        <p>Every <%= @crop.water_needs %> days</p>
      </div>
      <div class="crop-bottom-details-container">
        <p>Nitrogen:</p>
        <p><%= @crop.nitrogen_needs %></p>
      </div>
      <h5>Recommendations</h5>
      <div class="crop-bottom-details-container">
        <p>Sun Exposure:</p>
        <p><%= @crop.sun_exposure %></p>
      </div>
      <div class="crop-bottom-details-container">
        <p>Crop Spacing:</p>
        <p><%= @crop.spacing_in_cm %> cm</p>
      </div>
      <div class="crop-bottom-details-container">
        <p>Sowing Months:</p>
        <p><%= @crop.sowing_months %></p>
      </div>
    <%#= this one should be another div with water use %>
    </div>
  </div>
</div>
